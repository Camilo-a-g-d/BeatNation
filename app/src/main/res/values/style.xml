<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilos de los inputs o campos de texto -->
    <style name="editTextRounded" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/edit_text_rounded</item>
        <item name="android:color">@color/king_blue</item>
        <item name="android:textColorHint">@color/king_blue</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:layout_width">310dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
    </style>

    <!-- Estilos de línea divisiora -->
    <style name="lineDivider">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:background">@color/king_blue</item>
    </style>

    <!-- Estilo del botón primario -->
    <style name="btnPrimary" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/btn_primary_style</item>
        <item name="android:backgroundTint">@color/king_blue</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Estilo del botón secundario redondeado -->
    <style name="btnPrimaryRounded" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/btn_primary_rounded_style</item>
        <item name="android:backgroundTint">@color/king_blue</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Estilo del botón secundario -->
    <style name="btnSecondary" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/btn_secondary_style</item>
        <item name="android:backgroundTint">@color/dark_gray</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="roundedImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Borde a la Imagen -->
    <style name="RoundedProductImageStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

</resources>