<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainRegisterActivity"
    android:background="@color/main_color"
    tools:context=".activities.EditProfileFanActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:id="@+id/imgAppEditMainRegisterActivity"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/templateUserImgDesc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo_beat_nation" />

        <TextView
            android:id="@+id/appNameLabelEditMainRegisterActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="42dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/app_name"
            android:textColor="@color/king_blue"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imgAppEditMainRegisterActivity"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/customYourProfileInEditProfileFan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/customYourProfileLabel"
            android:textAlignment="center"
            android:textColor="@color/king_blue"
            android:textSize="19sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgAppEditMainRegisterActivity" />

        <ImageView
            android:id="@+id/imgUserMainRegisterActivity"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/customYourProfileInEditProfileFan"
            app:srcCompat="@drawable/avatar" />

        <TextView
            android:id="@+id/typeInstrustyUser"
            style="@style/editTextRounded"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgUserMainRegisterActivity" />

        <EditText
            android:id="@+id/UserNameInputMainRegisterActivity"
            style="@style/editTextRounded"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="@string/UserNameLabels"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/typeInstrustyUser" />

        <EditText
            android:id="@+id/UserLastnameMainRegisterActivity"
            style="@style/editTextRounded"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="@string/UserLastnameLabels"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/UserNameInputMainRegisterActivity" />

        <EditText
            android:id="@+id/UserEmailMainRegisterActivity"
            style="@style/editTextRounded"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="@string/UserEmailLabels"
            android:inputType="textEmailAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/UserLastnameMainRegisterActivity" />

        <EditText
            android:id="@+id/UserPhoneNumberMainRegisterActivity"
            style="@style/editTextRounded"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="@string/UserPhoneNumberLabels"
            android:inputType="phone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/UserEmailMainRegisterActivity" />

        <EditText
            android:id="@+id/UserCountryMainRegisterActivity"
            style="@style/editTextRounded"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="@string/UserCountryLabels"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/UserPhoneNumberMainRegisterActivity" />

        <EditText
            android:id="@+id/UserCityMainRegisterActivity"
            style="@style/editTextRounded"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="@string/UserCityLabels"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/UserCountryMainRegisterActivity" />

        <Button
            android:id="@+id/btnContinueMainRegisterActivity"
            style="@style/btnPrimaryRounded"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/saveLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/UserCityMainRegisterActivity" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>